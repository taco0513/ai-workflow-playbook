# AI Workflow Playbook - 환경변수 설정 예시
# 이 파일을 .env로 복사하고 실제 값으로 수정하세요

# 서버 설정
NODE_ENV=production
PORT=3000

# SSL/HTTPS 설정
ENABLE_HTTPS=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# 캐시 설정
ENABLE_CACHE=true
BUILD_CACHE_DIR=./.cache
REDIS_URL=redis://localhost:6379

# 성능 설정
MAX_WORKERS=4
CONCURRENT_LIMIT=2

# 로깅 설정
DEBUG=false
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# 보안 설정
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*

# 모니터링 설정
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000

# 데이터베이스 설정 (향후 확장용)
DATABASE_URL=
MONGODB_URI=

# 외부 서비스 설정 (향후 확장용)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# 이메일 설정 (향후 확장용)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# 클라우드 스토리지 설정 (향후 확장용)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-northeast-2
S3_BUCKET=

# 배포 설정
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest
DEPLOYMENT_ENVIRONMENT=production

# 분석 및 추적 (향후 확장용)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SENTRY_DSN=

# 기타 설정
TIMEZONE=Asia/Seoul
DEFAULT_LANGUAGE=ko
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=html,css,js,json,md,png,jpg,jpeg,gif,svg

# 개발 환경 전용
MOCK_API_CALLS=false
DEVELOPMENT_MODE=false
HOT_RELOAD=false